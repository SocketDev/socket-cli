FROM alpine:3.19

# Install build dependencies.
RUN apk add --no-cache \
    nodejs \
    npm \
    python3 \
    make \
    g++ \
    linux-headers \
    git \
    curl \
    patch \
    ccache \
    ninja

# Install pnpm globally.
RUN npm install -g pnpm@10.20.0

# Set working directory.
WORKDIR /workspace
