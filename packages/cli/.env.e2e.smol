# E2E Test Environment Configuration for Smol Binary
# Extends .env.e2e with smol binary testing

NODE_COMPILE_CACHE="./.cache"
NODE_OPTIONS="--max-old-space-size=2048 --unhandled-rejections=warn"
VITEST=1

# Points to local @socketsecurity/cli JS dist
SOCKET_CLI_JS_PATH="./dist/cli.js"

# Enable E2E tests (requires Socket API token)
RUN_E2E_TESTS=1

# Enable smol binary testing
TEST_SMOL_BINARY=1
